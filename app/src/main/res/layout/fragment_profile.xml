<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/default_profile"
                tools:src="@tools:sample/avatars"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="John Doe"
                    android:textSize="18sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="john.doe@example.com"
                    android:textSize="14sp"
                    android:layout_marginStart="10dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:padding="8dp"
                    android:text="@string/edit"
                    android:textColor="@color/yellow"
                    android:textSize="16sp"
                    android:layout_gravity="end"/>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/my_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/my_activities"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/user_profile"
            android:layout_marginTop="40dp"/>


        <ImageView
            android:id="@+id/iv_transactions_list"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/transactions_list"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/my_activities"/>

        <ImageView
            android:id="@+id/iv_reviews"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/reviews"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_transactions_list"/>

        <TextView
            android:id="@+id/tv_account_settings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_settings"
            android:fontFamily="@font/poppins_regular"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:layout_margin="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_reviews"
            android:layout_marginTop="40dp"/>

        <ImageView
            android:id="@+id/iv_language_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:src="@drawable/language"
            android:layout_marginStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_account_settings"/>


        <LinearLayout
            android:id="@+id/layout_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_language_setting"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="20dp"
            android:gravity="end"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_logout_30"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/logout"
                android:fontFamily="@font/poppins_regular"
                android:textSize="20sp"
                android:textColor="@color/red"/>




        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>







</ScrollView>